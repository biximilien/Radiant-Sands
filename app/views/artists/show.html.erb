<div class="artist">

  <legend><%= artist.name %></legend>

  <strong>Shows</strong>
  <ol>
    <% artist.events.each do |event| %>
      <li><%= link_to event, event %></li>
    <% end %>
  </ol>

  <br>
  
  <strong>Played at</strong>
  <ol>
    <% artist.venues.each do |venue| %>
      <li><%= link_to venue, venue %></li>
    <% end %>
  </ol>
</div>