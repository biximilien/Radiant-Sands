<header class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    
    <div class="col-md-3">
      <div class="navbar-header">
        <%= button_tag type: 'button', class: 'navbar-toggle collapsed',
                       data: { toggle: 'collapse', target: '.navbar-collapse' } do %>
          <%= content_tag :span, 'Toggle navigation', class: 'sr-only' %>
          <% 3.times do %>
           <span class="icon-bar"></span>
          <% end %>
        <% end %>

        <%= link_to 'Pin-up Gattawa', root_path, id: 'logo', class: 'navbar-brand' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="navbar-collapse collapse" style="margin-left: -15px;">
        
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to 'Calendar', events_path %></li>
          <li><a href="#artists">Artists</a></li>
          <li><%= link_to 'Venues', venues_path %></li>
        </ul>
      
        <ul class="nav navbar-nav navbar-right">
          <li>
            <form class="navbar-form">
              <%= link_to 'Post an event', new_event_path, class: 'btn btn-primary' %>
            </form>
          </li>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
        </ul>      

      </div>
    </div>

  </div>
</header>