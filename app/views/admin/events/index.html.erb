<%= render 'events/filters' %>

<%= link_to fa_icon('arrow-right'), events_path(date: date + 7), class: 'btn btn-flat btn-primary pull-right' %>
<%= link_to fa_icon('arrow-left'),  events_path(date: date - 7), class: 'btn btn-flat btn-primary pull-left' %>
<h1 class="text-center"><%= date.strftime('%Y-%m-%d') %></h1>

<div class="events">
  <div class="page">
    <% events.each do |event| %>
      <%= render event %>
    <% end %>
  </div>
</div>

<%= paginate events %>