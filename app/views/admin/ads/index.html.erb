<h1>Listing Ads</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% ads.each do |ad| %>
      <tr>
        <td><%= link_to 'Show', admin_ad_path(ad) %></td>
        <td><%= link_to 'Edit', edit_admin_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', admin_ad_path(ad), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_admin_ad_path %>
