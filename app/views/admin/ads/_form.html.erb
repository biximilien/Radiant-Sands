<%= form_for ad, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control' %>
        <%= display_error_for ad, :url %>
      </div>

      <div class="form-group">
        <%= f.label :image %>&nbsp;<p class="label label-primary">300x300</p>
        <div class="input-group">
          <%= link_to 'Browse...', '#', id: 'image-upload-btn', class: 'input-group-addon btn btn-default' %>
          <span id="image-upload-label" class="form-control"></span>
          <%= f.file_field :image, id: 'image-upload', style: 'display: none;' %>
        </div>
        <%= display_error_for ad, :image %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-group">
        <%= f.submit 'Upload Ad Image', id: 'ad-upload-btn', class: 'btn btn-primary form-control' %>
      </div>
    </div>
  </div>

<% end %>
