<% events.each_slice(1) do |slice| %>
  <div class="row">
    <% slice.each do |event| %>
      <div id="event-<%=event.id%>" class="container event">
        <div class="col-md-8 col-md-offset-2">
          <%= link_to event do %>
            <div class="row">
              <legend><%= event.title %></legend>
            </div>
            
            <div class="row">
              <div class="col-md-6 col-md-offset-6">
                <strong>
                  <%= event.location %> <time datetime="<%= event.date_begin %>"><%= event.date_begin %></time>
                </strong>
                <p><%= truncate(event.content, length: 140, separator: ' ') %></p>
                <!-- <time datetime="<%= event.date_end %>"><%= event.date_end %></time> -->
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>