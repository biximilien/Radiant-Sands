%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top{ role: "navigation" }
  = link_to 'Radiant Sands', root_path, id: 'logo', class: 'navbar-brand'

  %button.navbar-toggler{type: 'button', data: { toggle: 'collapse', target: '#navbar-nav-dropdown'}, 'aria-controls': 'navbar-nav-dropdown', 'aria-expanded': 'false', 'aria-label': 'Toggle navigation' }
    %span.navbar-toggler-icon

  .navbar-collapse.collapse#navbar-nav-dropdown
    %ul.navbar-nav.mr-auto
      %li.nav-item
        = link_to events_path, class: 'nav-link' do
          %i.flaticon.flaticon-election
          Calendar

      %li.nav-item
        = link_to artists_path, class: 'nav-link' do
          %i.flaticon.flaticon-artist2
          Artists

      %li.nav-item
        = link_to venues_path, class: 'nav-link' do
          %i.flaticon.flaticon-theater5
          Venues

    %form.form-inline.my-2
      - if user_signed_in? && current_user.admin?
        = link_to 'Dashboard', admin_dashboard_path, class: "btn btn-flat btn-primary"
      - elsif user_signed_in?
        = link_to 'Sign out', destroy_user_session_path, method: 'delete', class: 'btn btn-primary'
      - else
        = link_to 'Sign in', new_user_session_path, class: 'btn btn-primary mr-2'
        = link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary'
